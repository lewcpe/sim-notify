<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="run_sim_listener"
        android:title="@string/pref_title_run_sim_listener"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="destination_number"
        android:title="@string/pref_title_destination_number"
        android:defaultValue="@string/pref_default_destination_number"
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="prepared_message"
        android:title="@string/pref_title_prepared_message"
        android:defaultValue="@string/pref_default_prepared_message"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
